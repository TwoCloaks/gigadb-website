#!/bin/sh
# A shell script to update FTP users
# Written by: Peter Li
# Last updated on: Sep/28/2016
# -------------------------------------------

set -e
set -u

PSQL=/usr/bin/psql

DB_USER=<%= node[:fileserver][:db][:user] %>
DB_HOST=<%= node[:fileserver][:db][:host] %>
DB_NAME=<%= node[:fileserver][:db][:database] %>
export PGPASSWORD=<%= node[:fileserver][:db][:password] %>

# Iterates through a result set
$PSQL \
  -X \
  -h $DB_HOST \
  -U $DB_USER \
  -c "select name, password from ftp_users;" \
  --single-transaction \
  --set AUTOCOMMIT=off \
  --set ON_ERROR_STOP=on \
  --no-align \
  -t \
  --field-separator ' ' \
  --quiet \
  -d $DB_NAME \
| while read name passwd ; do
	ret=false
	getent passwd ${name} >/dev/null 2>&1 && ret=true
	# Check if user exists
	if $ret; then
		echo "yes ${name} user exists"
		# Update password for user
		echo ${name}:${passwd} | chpasswd
	else
		echo "No, ${name} user does not exist"
		# Create account for user
		useradd -c "${name}" -m ${name}
		# Add password for user
		echo ${name}:${passwd} | chpasswd

		# Create ftp user config file
		touch <%= node[:vsftpd][:etcdir] + '/users.d/' %>${name}
		echo "local_root="<%= node[:fileserver][:test_mount_point] + '/temporary_upload/' %>${name} >> <%= node[:vsftpd][:etcdir] + '/users.d/' %>${name}
	fi

	# Create directory for user to upload files by FTP if it does NOT exist
	USER_DIR=<%= node[:fileserver][:test_mount_point] + '/temporary_upload/' %>${name}
	if [ ! -d "$USER_DIR" ]; then
		mkdir $USER_DIR
		chown ${name}:${name} $USER_DIR
		chmod 0700 $USER_DIR
	fi
done
